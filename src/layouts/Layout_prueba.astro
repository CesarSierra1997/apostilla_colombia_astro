---
// import "@fontsource-variable/onest"

import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import { ViewTransitions } from "astro:transitions"
import Reseñas from '../components/Reseñas.astro';
import OtrosServicios from "../components/OtrosServicios.astro";
import Traduccion from "../components/Traduccion.astro";
import Apostilla from "../components/Apostilla.astro";
import HeroAP from "../components/Hero.astro"
import Formulario from "../components/Formulario.astro";
import QuienesSomos from "../components/QuienesSomos.astro";
import "@/styles/global.css"; 

interface Props {
  title: string
  description: string
}

const { description, title } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>

  <body id="theme-body" class="relative text-black dark:text-white min-h-screen flex flex-col">
    <Header />
    <slot />
    <!-- <HeroAP /> -->
    <Footer />

  </body>
</html>
