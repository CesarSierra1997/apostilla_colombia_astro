---
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import TramitesyServicios from "../components/services/TramitesyServicios.astro";
import Traduccion from "../components/services/Traduccion.astro";
import Apostilla from "../components/services/Apostilla.astro";
import QuienesSomos from "../components/services/QuienesSomos.astro";
import Formulario from "../components/services/Formulario.astro";
import HeroAP from "../components/Hero.astro"


import "@/styles/global.css"; 

interface Props {
  title: string
  description: string
}

const { description, title } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body id="theme-body">
    <Header />
    <slot />
    <HeroAP />
    
    <Apostilla />
    <Traduccion />
    <TramitesyServicios />
    <QuienesSomos />
    <Formulario />
    

    <Footer />

  </body>
</html>
