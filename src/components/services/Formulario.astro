<section
  class="bg-blue-700/30 p-8 rounded-xl border border-blue-800"
  id="cotizaciones"
>
  <div class="max-w-4xl mx-auto">
    <h2 class="text-4xl font-bold text-center mb-12">Solicitar Cotización</h2>

    <form class="bg-sky-100/30 p-8 rounded-lg shadow-lg">
      <div class="grid md:grid-cols-2 gap-6">
        <div>
          <label class="block text-sm font-medium mb-2" for="nombre">
            Nombre Completo *
          </label>
          <input
            type="text"
            id="nombre"
            name="nombre"
            required
            class="w-full px-4 py-2 rounded-lg border border-sky-500"
          />
        </div>

        <div>
          <label class="block text-sm font-medium mb-2" for="email">
            Correo Electrónico *
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 py-2 rounded-lg border border-sky-500"
          />
        </div>

        <div>
          <label class="block text-sm font-medium mb-2" for="telefono">
            Teléfono *
          </label>
          <input
            type="number"
            id="telefono"
            name="telefono"
            required
            class="w-full px-4 py-2 rounded-lg border border-sky-500"
          />
        </div>

        <div>
          <label class="block text-sm font-medium mb-2" for="servicio">
            Tipo de Servicio *
          </label>
          <select
            id="servicio"
            name="servicio"
            required
            class="w-full px-4 py-2 rounded-lg border border-sky-500"
          >
            <option value="">Seleccione un servicio</option>
            <option value="apostilla">Apostilla de Documentos</option>
            <option value="traduccion">Traducción Oficial</option>
            <option value="homologacion">Homologación de Títulos</option>
            <option value="visa">Visa de Estudiante</option>
            <option value="otro">Otro</option>
          </select>
        </div>
      </div>

      <div class="mt-6">
        <label class="block text-sm font-medium mb-2" for="mensaje">
          Mensaje *
        </label>
        <textarea
          id="mensaje"
          name="mensaje"
          rows="4"
          required
          class="w-full px-4 py-2 rounded-lg border border-sky-500"></textarea>
      </div>

      <div class="mt-6">
        <label class="block text-sm font-medium mb-2">
          Adjuntar Documentos
        </label>
        <input
          type="file"
          multiple
          accept=".pdf,.doc,.docx,.jpg,.jpeg,.png"
          class="w-full px-4 py-2 rounded-lg border border-sky-500"
        />
        <p class="text-sm text-gray-500 mt-1">
          Formatos permitidos: PDF, DOC, DOCX, JPG, PNG (Máx. 10MB por archivo)
        </p>
      </div>

      <!-- Sección con checkbox e input oculto -->
      <div class="mt-6">
        <!-- Checkbox -->
        <label class="flex items-start space-x-3 cursor-pointer">
          <input
            type="checkbox"
            id="colombiaCheck"
            class="form-checkbox mt-1 h-5 w-5 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
          />
          <span class="text-sm">
            Mi consulta es de <strong>documentos expedidos en Colombia</strong>.
            <br />
            ¿Tus documentos fueron emitidos en otro país?
            <a href="#" class="text-blue-600 underline ml-1">
              Ver trámite para documentos del exterior
            </a>
          </span>
        </label>

        <!-- Campo de ciudad oculto inicialmente -->
        <div id="ciudadInput" class="mt-4 hidden">
          <label for="ciudad" class="block text-sm font-medium">
            Ciudad donde fue expedido el o los documentos
          </label>
          <input
            type="text"
            id="ciudad"
            name="ciudad"
            placeholder=" Ejemplo: Bogotá"
            class="mt-1 block w-full rounded-md shadow-sm focus:border-red-500 focus:ring-red-500 border border-sky-500"
          />
        </div>
      </div>

      <!-- Script que activa/desactiva el input -->
      <script>
        document.addEventListener("DOMContentLoaded", () => {
          const checkbox = document.getElementById("colombiaCheck") as HTMLInputElement | null;
          const ciudadInput = document.getElementById("ciudadInput") as HTMLElement | null;

          if (checkbox && ciudadInput) {
            checkbox.addEventListener("change", () => {
              ciudadInput.classList.toggle("hidden", !checkbox.checked);
            });
          }
        });
      </script>

      <div class="mt-6">
        <label class="inline-flex items-center">
          <input
            type="checkbox"
            required
            checked
            class="form-checkbox h-5 w-5 text-blue-600 border-gray-300 rounded"
          />
          <span class="ml-2 text-sm">
            Al enviar el formulario, usted acepta los
            <a
              href="#"
              class="text-blue-600 underline hover:text-blue-800 dark:hover:text-blue-300"
            >
              términos y condiciones</a>.
          </span>
        </label>
      </div>

      <div class="mt-8">
        <button
          type="submit"
          class="w-full bg-blue-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
        >
          Enviar Solicitud
        </button>
      </div>
    </form>
  </div>
</section>
