---
const otros_servicios = [
  {
    titulo: "Homologación de Títulos en España",
    descripcion:
      "Te ayudamos con todo el proceso de homologación de tu título universitario en España, incluyendo la gestión de documentos y seguimiento del trámite.",
    icono: "🎓",
  },
  {
    titulo: "Apostilla de Documentos en España",
    descripcion:
      "Gestionamos la apostilla de tus documentos directamente en España, garantizando su validez para trámites oficiales.",
    icono: "📜",
  },
  {
    titulo: "Visa de Estudiantes para España",
    descripcion:
      "Asesoramiento completo para la obtención de tu visa de estudiante, incluyendo preparación de documentos y requisitos necesarios.",
    icono: "✈️",
  },
];

const tramites = [
  {
    titulo: "Apostilla de Documentos",
    descripcion:
      "Autenticación internacional de documentos públicos mediante el convenio de La Haya",
    items: [
      "Documentos universitarios 🎓",
      "Registros civiles de notaría/registraduría 📋",
      "Antecedentes judiciales migratorios 🔍",
      "Documentos escolares (previa legalización) 📚",
    ],
    icono: "🔏",
  },
  {
    titulo: "Legalización de Documentos",
    descripcion:
      "Validación oficial ante MRE (Cancillería) y MEN (Ministerio de Educación)",
    items: [
      "Legalización MRE para documentos oficiales 🏛️",
      "Legalización MEN para títulos académicos 📜",
      "Certificaciones consulares 🌐",
      "Validaciones ministeriales ✅",
    ],
    icono: "⚖️",
  },
  {
    titulo: "Traducción de Documentos",
    descripcion:
      "Servicios profesionales de traducción para documentos oficiales",
    items: [
      "Traducciones oficiales certificadas 📝",
      "Traducciones con apostilla 🔏",
      "Servicio de intérprete 🗣️",
      "Traducciones técnicas especializadas 📊",
    ],
    icono: "🌍",
  },
  {
    titulo: "Gestión de Documentos",
    descripcion:
      "Trámites ante entidades oficiales nacionales e internacionales",
    items: [
      "Trámites consulares y embajadas 🏢",
      "Gestiones en notarías y registradurías 📋",
      "Trámites en secretarías de educación 🏫",
      "Servicios ante la nunciatura apostólica ⛪",
    ],
    icono: "📁",
  },
];
---

<section
  class="py-20 px-4 bg-gray-50 dark:bg-gray-900/20 mt-1 rounded-xl shadow-xl"
  id="tramitesyservicios"
>
  <div class="max-w-7xl mx-auto">
    <h2 class="text-5xl font-bold text-center mb-16">Trámites y Servicios</h2>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-20">
      {
        tramites.map((tramite) => (
          <div class=" bg-blue-700/30 p-6 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 transition-all hover:shadow-xl hover:border-purple-900  hover:scale-105">
            <div class="text-4xl mb-4">{tramite.icono}</div>
            <h3 class="text-xl font-semibold mb-3 ">{tramite.titulo}</h3>
            <p class=" mb-4 text-sm">{tramite.descripcion}</p>
            <ul class="space-y-2">
              {tramite.items.map((item) => (
                <li class="text-sm flex items-center gap-2">
                  <span class="text-blue-500">•</span> {item}
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>

    <div
      class="bg-gradient-to-r from-blue-600 to-purple-600 hover:from-purple-700 hover:to-blue-700 rounded-xl p-8 mb-20 text-white transition-all duration-500 transform hover:scale-105 hover:shadow-2xl shadow-xl border border-white/10 backdrop-blur-sm"
    >
      <div
        class="text-center mb-8 transform transition-all duration-500 hover:scale-105"
      >
        <h3
          class="text-3xl font-bold mb-4 text-transparent bg-clip-text bg-gradient-to-r from-white to-blue-100"
        >
          Gestoría de documentos en España
        </h3>
        <p
          class="text-lg max-w-3xl mx-auto font-blod"
        >
          Homlogación de títulos, visado de estudiantes, seguro medico,
          apostilla y gestoria de documentos en general
        </p>
        <hr class="my-3">
        <p
          class="text-lg opacity-90 max-w-3xl mx-auto font-medium tracking-wide"
        >
          Obtén asesoramiento profesional personalizado para tus procesos en
          España
        </p>
      </div>
      <div class="flex justify-center">
        <a
          href="https://wa.me/573213254326?text=Iniciar%20chat%20Gestoria-España."
          target="_blank"
          class="group bg-white text-purple-600 hover:bg-pruple-600 hover:text-white px-10 py-4 rounded-full font-bold text-lg transition-all duration-300 flex items-center gap-3 shadow-lg hover:shadow-xl transform hover:-translate-y-1 hover:scale-110 relative overflow-hidden bg-gradient-to-r from-yellow-600"
        >
          <span class="relative z-10 flex items-center gap-2">
            Agendar cita <span
              class="text-xl group-hover:rotate-12 transition-transform duration-300"
              >📅</span
            >
          </span>
          <div
            class="absolute inset-0 bg-gradient-to-r from-cyan-600 to-orange-400 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"
          >
          </div>
        </a>
      </div>
    </div>

    <hr />

    <div class="py-20 px-4" id="otros_servicios">
      <div class="max-w-7xl mx-auto">
        <h2 class="text-5xl font-bold text-center mb-16">Otros Servicios</h2>
        <div class="grid md:grid-cols-3 gap-8">
          {
            otros_servicios.map((servicio) => (
              <div class="bg-gray-700/30 p-6 rounded-xl shadow-lg border border-gray-7 transition-transform hover:scale-105">
                <div class="text-4xl mb-4">{servicio.icono}</div>
                <h4 class="text-xl font-semibold mb-4 text-white">
                  {servicio.titulo}
                </h4>
                <p>
                  {servicio.descripcion}
                </p>
              </div>
            ))
          }
        </div>
      </div>
    </div>

    <div
      class="mt-12 bg-blue-500/30 p-8 rounded-xl border border-blue-900 shadow-lg"
    >
      <h3 class="text-2xl font-semibold mb-4">¿Por qué elegirnos?</h3>
      <div class="grid md:grid-cols-3 gap-6">
        <div>
          <h4 class="font-semibold mb-2">Experiencia</h4>
          <p>
            Más de 10 años gestionando trámites internacionales
          </p>
        </div>
        <div>
          <h4 class="font-semibold mb-2">Garantía</h4>
          <p>
            100% de efectividad en nuestros servicios
          </p>
        </div>
        <div>
          <h4 class="font-semibold mb-2">Asesoría</h4>
          <p>
            Acompañamiento personalizado en todo el proceso
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
