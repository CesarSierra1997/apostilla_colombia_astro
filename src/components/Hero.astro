---
// import { Image } from 'astro:assets';
import apostillaLogo from "../assets/logo_claro.png";
import backgroundastro from "../assets/background.svg";
import SliderHero from "../components/Slider.astro";
---

<section
  id="home"
  class="relative min-h-screen flex items-center justify-center overflow-hidden py-10"
>
  <!-- Background with gradient overlay -->
  <!-- <div class="absolute inset-0 bg-gradient-to-b from-blue-50/90 via-white/50 to-white dark:from-gray-900/90 dark:via-gray-900/50 dark:to-gray-950 -z-10"></div> -->

  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto text-center">
      <!-- Logo + Background SVG superposition -->
      <div
        class="mb-8 relative flex justify-center items-center w-full max-w-sm mx-auto aspect-square"
        id="logo-container"
      >
        <img
          src={backgroundastro.src}
          alt="Decorativo"
          class="absolute inset-0 w-full h-full object-contain opacity-0 scale-0"
          id="background-svg"
        />
        <img
          src={apostillaLogo.src}
          alt="Apostilla Colombia Traducciones Oficiales"
          class="relative z-10 w-full h-full object-contain opacity-0 scale-50"
          id="logo-image"
        />
      </div>

      <h1 class="text-3xl md:text-4xl font-bold mb-6 opacity-0" id="main-title">
        <span
          class="bg-gradient-to-r from-red-500 via-purple-500 to-blue-500 bg-clip-text text-transparent"
        >
          Apostilla Colombia Traducciones Oficiales
        </span>
      </h1>

      <p
        class="text-xl md:text-2xl mb-8 text-gray-700 dark:text-gray-300 max-w-3xl mx-auto opacity-0"
        id="main-description"
      >
        Expertos en legalización internacional de documentos y traducciones
        oficiales.
        <span class="font-semibold text-blue-600 dark:text-blue-400"
          >Más de 10 años</span
        > facilitando trámites en Colombia.
      </p>

      <div
        class="flex flex-col md:flex-row gap-4 justify-center mb-12 opacity-0"
        id="cta-buttons"
      >
        <a
          href="#otros_servicios"
          class="inline-flex items-center px-8 py-3 text-lg font-semibold text-white bg-gradient-to-r from-blue-600 to-purple-600 rounded-full hover:from-blue-700 hover:to-purple-700 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl"
        >
          Nuestros Servicios
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 ml-2"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
              clip-rule="evenodd"></path>
          </svg>
        </a>
        <a
          href="#formulario1"
          class="inline-flex items-center px-8 py-3 text-lg font-semibold text-blue-600 bg-white border-2 border-blue-600 rounded-full hover:bg-blue-50 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl dark:bg-transparent dark:text-blue-400 dark:border-blue-400 dark:hover:bg-blue-900/30"
        >
          Cotizar Ahora
        </a>
        <a
          href="#reseñas"
          class="inline-flex inline-flex items-center px-8 py-3 text-lg font-semibold text-white bg-gradient-to-r from-yellow-600 rounded-full hover:from-purple-700 hover:to-red-700 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl"
        >
          Garantia de Satisfacción
        </a>
      </div>

      <SliderHero />
    </div>
  </div>
</section>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import "swiper/css";
  import "swiper/css/navigation";
  import "swiper/css/pagination";
  import "swiper/css/effect-fade";

  gsap.registerPlugin(ScrollTrigger);

  // Intro animations para SVG y logo con pop-in y destello
  gsap.to("#background-svg", {
    opacity: 1,
    scale: 5,
    duration: 0.8,
    ease: "power3.out",
  });

  gsap.to("#logo-image", {
    opacity: 1,
    scale: 1,
    duration: 0.9,
    delay: 0.5,
    ease: "back.out(1.7)",
  });

  gsap.to("#main-title", {
    opacity: 1,
    y: 0,
    duration: 1,
    delay: 1,
    ease: "power3.out",
  });

  gsap.to("#main-description", {
    opacity: 1,
    y: 0,
    duration: 1,
    delay: 1.3,
    ease: "power3.out",
  });

  gsap.to("#cta-buttons", {
    opacity: 1,
    y: 0,
    duration: 1,
    delay: 1.6,
    ease: "power3.out",
  });
</script>

<style>
  :global(#logo-image) {
    top: 0;
  }

  :global(#background-svg) {
    opacity: 0;
    transform: scale(0);
  }
</style>
