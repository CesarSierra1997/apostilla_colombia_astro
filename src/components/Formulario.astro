<section class="py-20 px-4">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-4xl font-bold text-center mb-12">Solicitar Cotización</h2>

    <form class="bg-white dark:bg-gray-800 p-8 rounded-lg shadow-lg">
      <div class="grid md:grid-cols-2 gap-6">
        <div>
          <label class="block text-sm font-medium mb-2" for="nombre">
            Nombre Completo *
          </label>
          <input
            type="text"
            id="nombre"
            name="nombre"
            required
            class="w-full px-4 py-2 rounded-lg border dark:bg-gray-700 dark:border-gray-600"
          />
        </div>

        <div>
          <label class="block text-sm font-medium mb-2" for="email">
            Correo Electrónico *
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 py-2 rounded-lg border dark:bg-gray-700 dark:border-gray-600"
          />
        </div>

        <div>
          <label class="block text-sm font-medium mb-2" for="telefono">
            Teléfono *
          </label>
          <input
            type="tel"
            id="telefono"
            name="telefono"
            required
            class="w-full px-4 py-2 rounded-lg border dark:bg-gray-700 dark:border-gray-600"
          />
        </div>

        <div>
          <label class="block text-sm font-medium mb-2" for="servicio">
            Tipo de Servicio *
          </label>
          <select
            id="servicio"
            name="servicio"
            required
            class="w-full px-4 py-2 rounded-lg border dark:bg-gray-700 dark:border-gray-600"
          >
            <option value="">Seleccione un servicio</option>
            <option value="apostilla">Apostilla de Documentos</option>
            <option value="traduccion">Traducción Oficial</option>
            <option value="homologacion">Homologación de Títulos</option>
            <option value="visa">Visa de Estudiante</option>
            <option value="otro">Otro</option>
          </select>
        </div>
      </div>

      <div class="mt-6">
        <label class="block text-sm font-medium mb-2" for="mensaje">
          Mensaje *
        </label>
        <textarea
          id="mensaje"
          name="mensaje"
          rows="4"
          required
          class="w-full px-4 py-2 rounded-lg border dark:bg-gray-700 dark:border-gray-600"
        ></textarea>
      </div>

      <div class="mt-6">
        <label class="block text-sm font-medium mb-2">
          Adjuntar Documentos
        </label>
        <input
          type="file"
          multiple
          accept=".pdf,.doc,.docx,.jpg,.jpeg,.png"
          class="w-full px-4 py-2 rounded-lg border dark:bg-gray-700 dark:border-gray-600"
        />
        <p class="text-sm text-gray-500 mt-1">
          Formatos permitidos: PDF, DOC, DOCX, JPG, PNG (Máx. 10MB por archivo)
        </p>
      </div>

      <div class="mt-8">
        <button
          type="submit"
          class="w-full bg-blue-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
        >
          Enviar Solicitud
        </button>
      </div>
    </form>
  </div>
</section>