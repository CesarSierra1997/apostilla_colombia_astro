        icon: "📚",
        requisitos: [
            "Escaner con buena resolución",
            "Enviar documentos en PDF",
        ],
    },
    {
        titulo: "Paquete Documentos",
        valor: "Desde $350.000",
        documentos: [
            "Diploma pregrado o postgrado",
