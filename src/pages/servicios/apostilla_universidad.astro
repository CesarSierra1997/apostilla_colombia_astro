    { pais: "Canadá", emoji: "🇨🇦", proceso: "Legalización" },
    { pais: "Australia", emoji: "🇦🇺", proceso: "Apostilla" },
    { pais: "Alemania", emoji: "🇩🇪", proceso: "Apostilla" },
    { pais: "Francia", emoji: "🇫🇷", proceso: "Apostilla" },
    { pais: "Italia", emoji: "🇮🇹", proceso: "Apostilla" },
