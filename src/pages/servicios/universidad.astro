    <!-- UNIVERSIDADES CON LAS QUE TRABAJAMOS -->
    <section class="bg-white py-16">
        <div class="max-w-6xl mx-auto px-4">
            <h2 class="text-3xl md:text-4xl font-bold text-center mb-4">
                Gestionamos documentos de <span
                    class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent"
                    >todas las universidades</span
                > de Colombia
            </h2>
            <p class="text-center text-gray-600 mb-12 text-lg">
                Sin importar de qué universidad seas graduado, apostillamos tus
                documentos
            </p>

            <div
                class="bg-gradient-to-br from-blue-300/10 to-purple-500/30 rounded-2xl p-8"
            >
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4 mb-6">
                    {
                        universidadesPopulares
                            .slice(0, -1)
                            .map((universidad) => (
                                <div class="flex items-center gap-3 bg-gray-400/30 rounded-lg p-3 shadow-sm">
                                    <i class="fa-solid fa-graduation-cap"></i>
                                    <span class="font-semibold ">
                                        {universidad}
                                    </span>
                                </div>
                            ))
                    }
                </div>
                <div class="text-center">
                    <div
                        class="inline-flex items-center gap-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-lg px-6 py-3 font-bold text-lg"
