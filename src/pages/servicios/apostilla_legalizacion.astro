<!-- SCRIPT ANIMACIÓN -->
<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const cards = document.querySelectorAll('.animate-on-scroll');

    // Estado inicial
    cards.forEach((el) => {
      const dir = el.dataset.slideDirection;
      el.classList.add('opacity-0', 'transform-gpu', dir === 'left' ? '-translate-x-8' : 'translate-x-8',
        'transition-transform', 'duration-700', 'ease-out');
    });

    // IntersectionObserver
    const obs = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        const el = entry.target;
        const dir = el.dataset.slideDirection;

        if (entry.isIntersecting) {
          el.classList.remove('opacity-0', dir === 'left' ? '-translate-x-8' : 'translate-x-8');
          el.classList.add('opacity-100');
        } else {
          el.classList.remove('opacity-100');
          el.classList.add('opacity-0', dir === 'left' ? '-translate-x-8' : 'translate-x-8');
        }
      });
    }, { threshold: 0.2 });

    cards.forEach((card) => obs.observe(card));
  });
</script>

</section>



